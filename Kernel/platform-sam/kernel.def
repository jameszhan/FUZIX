; Fuzix mnemonics for memory addresses etc

U_DATA                      .equ 0xF800      ; (this is struct u_data from kernel.h)
U_DATA__TOTALSIZE           .equ 0x200       ; 512 bytes.

U_DATA_STASH		    .equ 0xFD00	     ; FD00-FEFF
					     ; FF00-FFFF is the high stubs
					     

PROGBASE		    .equ 0x0000
PROGLOAD		    .equ 0x0100

Z80_TYPE		    .equ 1


;
;	Select where to put the high code - in our case an _HIGH area but
;	other platforms want this in commonmem
;
.macro HIGH
		.area _HIGH
.endm
